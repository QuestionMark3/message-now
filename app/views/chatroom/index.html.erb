<!-- Chatroom title -->
<h4 class="ui center aligned medium icon header">
  <i class="circular inverted blue envelope icon"></i>
  Say Something
</h4>
<!-- /Chatroom title -->

<!-- Chatroom Body -->
<div class="ui two column grid">

	<!-- Feed -->
	<div class="twelve wide column">
	<div class="ui fluid raised card chatbox">

		<!-- Main content -->
		<div class="content">
		<div class="ui feed">
	 	<%= render @messages %>
		</div>
		</div>
		<!-- /Main content -->

		<!-- Form -->
		<div class="extra content">
		<%= form_for(@message, html: {class: "ui reply form" , role: "form"}, url: message_path) do |f| %>
			<div class="field">
			<div class="ui fluid action input">

				<%= f.text_field :body %>

				<%= f.button class: "blue ui button" do %>
					<i class="edit icon"></i>
				<% end %>

			</div>
			</div>
		<% end %>
		</div>
		<!-- /Form -->

	</div>
	</div>
	<!-- /Feed -->

	<!-- Verticle menu options -->
	<div class="four wide column">
	<div class="ui fluid raised card chatbox">
	<div class="content">
	<div class="ui inverted vertical menu">

	  <a class="active item">
	    Home
	  </a>

	  <a class="item">
	    Messages
	  </a>

	  <a class="item">
	    Friends
	  </a>

	</div>
	</div>
	</div>
	</div>
	<!-- /Verticle menu options -->

</div>
<!-- /Chatroom body -->