<!-- Chatroom title -->
<h4 class="ui center aligned medium icon header">
  <i class="circular inverted blue envelope icon"></i>
  Say Something
</h4>
<!-- /Chatroom title -->

<!-- Chatroom Body -->
<div class="ui two column grid">

	<!-- Feed -->
	<div class="twelve wide column">
	<div class="ui fluid raised card chatbox">

		<!-- Main content -->
		<div class="content">
		<div class="ui feed">
	  <% @messages.each do |message| %>

	  	<div class="event">
	    <div class="content">
	    <div class="summary">
	      <em><%= message.user.username %></em>: <%= message.body %>
	    </div>
	    </div>
		  </div>

	  <% end %>
		</div>
		</div>
		<!-- /Main content -->

		<!-- Form -->
		<div class="extra content">
		<form class="ui reply form">
		<div class="field">
		<div class="ui fluid icon input">

			<input type="text" placeholder="Enter a message...">

			<i class="bordered inverted blue edit icon"></i>

		</div>
		</div>
		</form>
		</div>
		<!-- /Form -->

	</div>
	</div>
	<!-- /Feed -->

	<!-- Verticle menu options -->
	<div class="four wide column">
	<div class="ui fluid raised card chatbox">
	<div class="content">
	<div class="ui inverted vertical menu">

	  <a class="active item">
	    Home
	  </a>

	  <a class="item">
	    Messages
	  </a>

	  <a class="item">
	    Friends
	  </a>

	</div>
	</div>
	</div>
	</div>
	<!-- /Verticle menu options -->

</div>
<!-- /Chatroom body