// Button for view chatrooms
view_chatrooms_btn = () => {
	var view_btn = $('#view');
	view_btn.click((event) => {
		
		view_btn.addClass('disabled');
		setTimeout(function() {view_btn.removeClass('disabled')}, 500);

		view_btn.toggleClass('active');

		$('.view-action').fadeToggle(500);
		format();
	});
}

// Buttons for selecting chatrooms
chatroom_btns = () => {
	$('.chatroom.card>.content').click((event) => {

		// Find target element
		var target = $(event.target).parent()
		if ($(event.target).attr('class') != 'content') {
			target = $(event.target).parent().parent()
		};

		// Toggle color
		$('.chatroom.card').removeClass('disabled');
		target.addClass('disabled');

		// Pass chatroom id to hidden field in main form
		var chatroom_id = target.data('chatroom_id');
		$('#message_chatroom_id').val(chatroom_id)

		// Change chatroom
		App[`chatroom${chatroom_id}`].setChatroomId(chatroom_id);

		// Display appropriate message container
		$('.message-container').fadeOut(500)
		setTimeout(() => {
			$(`.message-container[data-chatroom_id = "${chatroom_id}"]`).fadeIn(500);
			message_style();
		}, 500)
		
	});
}